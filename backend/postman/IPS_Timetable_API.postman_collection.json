        {
          "name": "List Subjects",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/subjects?page=1&limit=10&search=",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "subjects"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "search",
                  "value": ""
                }
              ]
            },
            "description": "List subjects with pagination and search"
          }
        },
        {
          "name": "Get Subject",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/subjects/:id",
            "description": "Get subject by ID"
