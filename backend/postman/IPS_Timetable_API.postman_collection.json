              "raw": "{\n  \"full_name\": \"Natural Language Processing\",\n  \"short_name\": \"NLP\",\n  \"code\": \"PCC CL13\",\n  \"weekly_frequency\": 2,\n  \"duration\": 50\n}"
            },
            "url": "{{baseUrl}}/api/subjects",
            "description": "Create new subject"
          }
        },
        {
          "name": "Update Subject",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"Natural Language Processing\",\n  \"short_name\": \"NLP\",\n  \"code\": \"PCC CL13\",\n  \"weekly_frequency\": 2,\n  \"duration\": 50\n}"
            },
            "url": "{{baseUrl}}/api/subjects/:id",
            "description": "Update subject"
          }
        },
        {
          "name": "Delete Subject",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/subjects/:id",
            "description": "Delete subject"
          }
        }
      ]
